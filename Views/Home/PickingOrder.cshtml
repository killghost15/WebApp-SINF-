@{
    ViewBag.Title = "PickingOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Picking Order</h2>

<div class="container">
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading">
                <h3 class="panel-title">Picking Encomenda de @ViewBag.encomenda[0].Entidade</h3>
                <div class="pull-right">
                    <button class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filter</button>
                </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Artigo" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Descrição" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Quantidade" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Secção" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Armazém" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Localização" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Lote" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Unidade" disabled></th>
                        <th><input type="text" class="form-control" placeholder="QuantTrans" disabled></th>
                    </tr>
                </thead>
                <tbody class="table-hover">
                    @foreach (var produto in ViewBag.encomenda[0].LinhasDoc)
                    {
                        <tr>
                            <td>@produto.Artigo</td>
                            <td>@produto.Descricao</td>
                            <td>@produto.Quantidade</td>
                            <td>@produto.Seccao</td>
                            <td>@produto.Armazem</td>
                            <td>@produto.Localizacao</td>
                            <td>@produto.Lote</td>
                            <td>@produto.Unidade</td>
                            <td>@produto.QuantTrans</td>                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            <form id="productForm" action="/Home/GuiaDeRemessa" method="POST" class="form-horizontal">
                <div class="form-group">                   
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="Filial" id="Filial" hidden value="000" />
                    </div>               
                </div>
                <div class="form-group">
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="TipoDoc" id="TipoDoc" hidden value="ECL" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="Serie" id="Serie" hidden value=@ViewBag.encomenda[0].Serie />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="NumDoc" id="NumDoc" hidden value="@ViewBag.encomenda[0].NumDoc" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="TipoEntidade" id="TipoEntidade" hidden value="C" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5 selectContainer" style="width: 65%">
                        <input name="Entidade" id="Entidade" hidden value=@ViewBag.encomenda[0].Entidade />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-5 col-xs-offset-3">
                        <button type="submit" class="btn btn-default">Finish Picking</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br /><br />

